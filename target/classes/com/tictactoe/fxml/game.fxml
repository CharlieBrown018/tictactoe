<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.*?>

<StackPane xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="com.tictactoe.controller.GameController"
         stylesheets="@../../../styles/dark-theme.css"
         styleClass="root">

    <!-- Animated Background -->
    <Pane styleClass="animated-background">
        <Circle fx:id="circle1" styleClass="background-shape" radius="20"/>
        <Circle fx:id="circle2" styleClass="background-shape" radius="15"/>
        <Polygon fx:id="triangle1" styleClass="background-shape"/>
        <Rectangle fx:id="rectangle1" styleClass="background-shape" width="30" height="30"/>
    </Pane>

    <!-- Game Content -->
    <VBox spacing="20" alignment="CENTER">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Game Mode Display -->
        <Label fx:id="gameModeLabel" styleClass="game-mode-title"/>

        <HBox alignment="CENTER" spacing="50">
            <!-- Player 1 Info -->
            <VBox styleClass="player-info" alignment="CENTER" minWidth="200">
                <Label fx:id="player1Name" styleClass="player-name"/>
                <Label fx:id="player1Stats" styleClass="player-stats"/>
            </VBox>

            <!-- Game Board -->
            <GridPane fx:id="gameBoard" styleClass="game-board" alignment="CENTER" hgap="10" vgap="10">
                <Button fx:id="btn00" styleClass="game-cell" onAction="#handleMove" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Button fx:id="btn01" styleClass="game-cell" onAction="#handleMove" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Button fx:id="btn02" styleClass="game-cell" onAction="#handleMove" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Button fx:id="btn10" styleClass="game-cell" onAction="#handleMove" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Button fx:id="btn11" styleClass="game-cell" onAction="#handleMove" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button fx:id="btn12" styleClass="game-cell" onAction="#handleMove" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Button fx:id="btn20" styleClass="game-cell" onAction="#handleMove" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Button fx:id="btn21" styleClass="game-cell" onAction="#handleMove" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Button fx:id="btn22" styleClass="game-cell" onAction="#handleMove" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            </GridPane>

            <!-- Player 2 Info -->
            <VBox styleClass="player-info" alignment="CENTER" minWidth="200">
                <Label fx:id="player2Name" styleClass="player-name"/>
                <Label fx:id="player2Stats" styleClass="player-stats"/>
            </VBox>
        </HBox>

        <!-- Game Controls -->
        <HBox alignment="CENTER" spacing="20">
            <Button text="Back to Menu" onAction="#backToMenu" styleClass="button, menu-button"/>
            <Button text="New Game" onAction="#startNewGame" styleClass="button, primary-button"/>
            <Button text="View Leaderboard" onAction="#showLeaderboard" styleClass="button, secondary-button"/>
        </HBox>

        <!-- Game Status -->
        <Label fx:id="gameStatus" styleClass="game-status" alignment="CENTER"/>
    </VBox>
</StackPane> 